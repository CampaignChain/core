        <input type="text" value="Hello there">
        <input type="submit" value="Go">
    </form>

    {% if is_old_tracking_js_route == 1 %}
    <script type="text/javascript">
        var campaignchainChannel = '{{ channel.trackingId }}';
    </script>
    <script type="text/javascript" src="//{{ app.request.httpHost() }}{{ tracking_js_route|raw }}"></script>
    {% endif %}
    {% if is_old_tracking_js_route == 0 %}
    <script type="text/javascript">
            {{ tracking_snippet|raw }}
    </script>
    {% endif %}
{% endblock %}