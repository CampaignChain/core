{% extends 'CampaignChainCoreBundle:Base:new.html.twig' %}

{% set campaignchain_body_col = 12 %}

{% block form_header %}
<div class="row">
    <div class="col-md-8">
        {% block form_header_content %}{% endblock %}
        {% endblock %}

        {% block form %}
            <form method="POST" class="form-horizontal" role="form" enctype="multipart/form-data">
                {{ bootstrap_set_style('horizontal') }}
                {{ bootstrap_set_widget_col(9) }}
                {{ bootstrap_set_label_col(3) }}
                {{ form_widget(form) }}
                <div class="form-group">
                    <div class="col-lg-offset-3 col-lg-9">
                        <div class="btn-group pull-right" role="group" aria-label="...">
                            {% if form_cancel_route is defined %}
                                <a href="{{ path(form_cancel_route) }}" class="btn btn-default" role="button"><i class="fa fa-close"></i> Cancel</a>
                            {% endif %}
                            {% if form_submit_label is defined %}
                                {% if form_submit_label == 'Save' %}
                                    <button class="btn btn-primary" type="submit"><i class="fa fa-save"></i> Save</button>
                                {% elseif form_submit_label == 'Upload' %}
                                    <button class="btn btn-primary" type="submit"><i class="fa fa-upload"></i> Upload</button>
                                {% elseif form_submit_label == 'Reset' %}
                                    <button class="btn btn-primary" type="submit"><i class="fa fa-undo"></i> Reset</button>
                                {% endif %}
                            {% else %}
                                <button class="btn btn-primary" type="submit">Next <i class="fa fa-arrow-right"></i></button>
                            {% endif %}
                        </div>
                    </div>
                </div>
            </form>
        {% endblock %}

        {% block form_footer %}
    </div>
    <div class="col-md-4">
        {% include 'CampaignChainCoreBundle:Milestone:sidebar.html.twig' %}
    </div>
</div>
{% endblock %}