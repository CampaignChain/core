<div class='campaignchain-teaser'>
    {% if options.only_icon == false %}<a href="{{ url }}">{% endif %}
        <img class='icon' height='{{ icon_size }}' width='{{ icon_size }}' style='width: {{ icon_size }} !important; height: {{ icon_size }} !important' src='{{ asset( icon_path ) }}'/>
        {% if context_icon_path|length > 0 %}
            <img class='context-icon' src='{{ asset( context_icon_path ) }}' style='background-image: url("{{ asset( context_icon_path ) }}");'/>
        {% endif %}
    {% if options.only_icon == false %}
    </a>
    <span class="text"><a href="{{ url }}">{{ name }}</a></span>
    {% endif %}
    {% if options.show_trigger == true %}
    <div><i class="fa fa-clock-o"></i> {{ trigger }}</div>
    {% endif %}
</div>