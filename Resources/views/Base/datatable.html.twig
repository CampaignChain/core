{% block javascripts %}
    {% javascripts '@datatables_js' combine=true %}
    <script src="{{ asset_url }}"></script>
    {% endjavascripts %}
    <script type="text/javascript" charset="utf-8">
        $(document).ready(function() {
            $('#example').dataTable( {
                "fnPreDrawCallback": function( oSettings ) {
                    $("[data-toggle=tooltip]").tooltip();
                }
            } );
        } );
    </script>
{% endblock %}

{% block stylesheets %}
    {% stylesheets '@datatables_css' output="media/css/*.css" filter="cssrewrite" %}
    <link href="{{ asset_url }}" type="text/css" rel="stylesheet" />
    {% endstylesheets %}
{% endblock %}