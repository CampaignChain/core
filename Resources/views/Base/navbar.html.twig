<nav class="navbar navbar-default navbar-fixed-top" role="navigation">
    <div class="container-fluid">
        <!-- Brand and toggle get grouped for better mobile display -->
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <a class="navbar-brand" href="#">
                {% if (campaignchain_system is not null) and (campaignchain_system.logo is not null) %}
                    <img src="{{ campaignchain_system.logo }}" height="24">
                {% else %}
                    CampaignChain
                {% endif %}
            </a>
        </div>

        <!-- Collect the nav links, forms, and other content for toggling -->
        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">

            {{ knp_menu_render('CampaignChainCoreBundle:Builder:leftNavbarMenu', { 'style': 'navbar' }) }}

            <!-- Single button -->
            <div class="btn-group">
                <button type="button" class="btn btn-default dropdown-toggle navbar-btn" data-toggle="dropdown">
                    Create New <span class="caret"></span>
                </button>
                <ul class="dropdown-menu" role="menu">
                    <li><a href="{{ path('campaignchain_core_activities_new') }}">Activity</a></li>
                    <li><a href="{{ path('campaignchain_core_milestone_new') }}">Milestone</a></li>
                    <li><a href="{{ path('campaignchain_core_campaign_new') }}">Campaign</a></li>
                    <li><a href="{{ path('campaignchain_core_channel_new') }}">Location</a></li>
                </ul>
            </div>

            <!-- User -->
            <ul class="nav navbar-nav navbar-right">
                <li class="dropdown">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown" title="You">{{ app.security.getToken().getUser().getUsername() }} <b class="caret"></b></a>
                    <ul class="dropdown-menu">
                        {#<li><span id="campaignchain_user_datetime"></span></li>#}
                        {#<li class="divider"></li>#}
                        <li><a href="{{ path('campaignchain_core_profile_edit') }}"><span class="fa fa-user"></span> Profile</a></li>
                        <li><a href="{{ path('fos_user_security_logout') }}"><span class="fa fa-sign-out"></span> Logout</a></li>
                    </ul>
                </li>
            </ul>

            <!-- Settings -->
            <ul class="nav navbar-nav navbar-right">
                <li class="dropdown">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown" title="Settings"><span class="fa fa-cog"></span> <b class="caret"></b></a>
                    <ul class="dropdown-menu">
                        <li><a href="{{ path('campaignchain_core_user') }}">Users</a></li>
                        <li><a href="#">Teams</a></li>
                        <li class="divider"></li>
                        <li><a href="{{ path('campaignchain_core_channel') }}">Channels</a></li>
                        <li><a href="{{ path('campaignchain_core_location') }}">Locations</a></li>
                        <li class="divider"></li>
                        <li><a href="{{ path('campaignchain_core_system_module') }}">Modules</a></li>
                        {% if (campaignchain_system is not null) and (campaignchain_system.navigation is not null)  and (campaignchain_system.navigation.settings is not null) %}
                            <li class="divider"></li>
                            {% for nav_setting in campaignchain_system.navigation.settings  %}
                                <li><a href="{{ path(nav_setting.1) }}">{{ nav_setting.0 }}</a></li>
                            {% endfor %}
                        {% endif %}
                    </ul>
                </li>
            </ul>

            <!-- Developer Tools -->
            <ul class="nav navbar-nav navbar-right">
                <li class="dropdown">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown" title="Developer Tools"><span class="fa fa-wrench"></span> <b class="caret"></b></a>
                    <ul class="dropdown-menu">
                        <li><a href="{{ path('campaignchain_development_sample_data') }}">Sample Data</a></li>
                    </ul>
                </li>
            </ul>

        </div><!-- /.navbar-collapse -->
    </div><!-- /.container-fluid -->
</nav>