<nav class="navbar navbar-default navbar-fixed-top campaignchain-navbar-main" role="navigation">
    <div class="container-fluid">
        <!-- Brand and toggle get grouped for better mobile display -->
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>

            {% if (campaignchain_system is not null) and (campaignchain_system.homepage is not null)   %}
                {% set brand_url = campaignchain_system.homepage %}
            {% else %}
                {% set brand_url = path('campaignchain_core_homepage') %}
            {% endif %}

            {% if (campaignchain_system is not null) and (campaignchain_system.logo is not null) %}
                <a class="navbar-brand" href="{{ app.request.getSchemeAndHttpHost() }}"><img src="{{ campaignchain_system.logo }}" height="24" class="visible-md-block visible-lg-block visible-sm-block">
                {% if campaignchain_system.icon is not null %}
                    <a class="navbar-brand" href="{{ app.request.getSchemeAndHttpHost() }}"><img src="{{ campaignchain_system.icon }}" height="24" class="visible-xs-block"></a>
                {% endif %}
                </a>
            {% else %}
                <a class="navbar-brand" href="{{ app.request.getSchemeAndHttpHost() }}">CampaignChain</a>
            {% endif %}

            <ul class="navbar-nav nav campaignchain-navbar">
                <li class="first"><a href="{{ path('campaignchain_core_plan') }}"><i class="fa fa-calendar"></i> <span class="visible-md-inline visible-lg-inline visible-sm-inline">Plan</span></a></li>
                <li><a href="{{ path('campaignchain_core_execute') }}"><i class="fa fa-dashboard"></i> <span class="visible-md-inline visible-lg-inline visible-sm-inline">Execute</span></a></li>
                <li class="last"><a href="{{ path('campaignchain_core_report') }}"><i class="fa fa-area-chart"></i> <span class="visible-md-inline visible-lg-inline visible-sm-inline">Monitor</span></a></li>
                <li class="dropdown">
                    <a href="#" class="dropdown-toggle btn btn-default" data-toggle="dropdown"><span class="fa fa-plus"></span> <span class="visible-md-inline visible-lg-inline visible-sm-inline">New </span><span class="caret visible-md-inline-block visible-lg-inline-block visible-sm-inline-block"></span></a>
                    <ul class="dropdown-menu" role="menu">
                        <li><a href="{{ path('campaignchain_core_activities_new') }}">Activity</a></li>
                        <li><a href="{{ path('campaignchain_core_milestone_new') }}">Milestone</a></li>
                        <li><a href="{{ path('campaignchain_core_campaign_new') }}">Campaign</a></li>
                        <li><a href="{{ path('campaignchain_core_channel_new') }}">Location</a></li>
                    </ul>
                </li>
            </ul>
        </div>

        <!-- Collect the nav links, forms, and other content for toggling -->
        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">

            <!-- User -->
            {% if app.user is not empty %}
                <ul class="nav navbar-nav navbar-right">
                    <li class="dropdown navbar-profile-dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" title="You">
                            <img class="navbar-profile-avatar" src="{{ app.user|campaignchain_user_avatar|imagine_filter('navbar_avatar') }}" class="avatar" alt="{{ app.user.name }}">
                            <span class="visible-md-inline visible-lg-inline">{{ app.user.name }} </span>
                            <span class="caret"></span>
                        </a>
                        <ul class="dropdown-menu">
                            {#<li><span id="campaignchain_user_datetime"></span></li>#}
                            {#<li class="divider"></li>#}
                            <li><a href="{{ path('campaignchain_core_profile_edit', {'id' : app.user.id}) }}"><span class="fa fa-user"></span> Profile</a></li>
                            <li><a href="{{ path('fos_user_security_logout') }}"><span class="fa fa-sign-out"></span> Logout</a></li>
                        </ul>
                    </li>
                </ul>
            {% endif %}

            <!-- Settings -->
            <ul class="nav navbar-nav navbar-right">
                <li>
                    <a href="#sidemenu" data-toggle="sidemenu" title="Settings"><span class="fa fa-cog"></span> <span class="visible-xs-inline">Settings </span></a>
                </li>
            </ul>

            <!-- Developer Tools -->
            {% if campaignchain_dev %}
            <ul class="nav navbar-nav navbar-right">
                <li class="dropdown">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown" title="Developer Tools"><span class="fa fa-wrench"></span> <span class="visible-xs-inline">Developer Tools </span><b class="caret"></b></a>
                    <ul class="dropdown-menu">
                        <li><a href="{{ path('campaignchain_development_sample_data') }}">Sample Data</a></li>
                        <li><a href="{{ path('campaignchain_development_reset_system') }}">Reset System</a></li>
                        <li><a href="{{ path('nelmio_api_doc_index') }}" target="_blank">REST API Doc</a></li>
                    </ul>
                </li>
            </ul>
            {% endif %}

        </div><!-- /.navbar-collapse -->
    </div><!-- /.container-fluid -->
</nav>
