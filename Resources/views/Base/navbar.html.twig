<nav class="navbar navbar-default navbar-fixed-top campaignchain-navbar-main" role="navigation">
    <div class="container-fluid">
        <!-- Brand and toggle get grouped for better mobile display -->
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>

            {% if (campaignchain_system is not null) and (campaignchain_system.homepage is not null)   %}
                {% set brand_url = campaignchain_system.homepage %}
            {% else %}
                {% set brand_url = path('campaignchain_core_homepage') %}
            {% endif %}

            <a class="navbar-brand" href="{{ app.request.getSchemeAndHttpHost() }}"><img src="/logo.png" height="24" class="visible-md-block visible-lg-block visible-sm-block">
                <a class="navbar-brand" href="{{ app.request.getSchemeAndHttpHost() }}"><img src="/icon.png" height="24" class="visible-xs-block"></a>
            </a>

            {% if is_granted('ROLE_USER') -%}
                {{ knp_menu_render('CampaignChainCoreBundle:Builder:mainNav', { 'style': 'navbar' }) }}
            {% endif %}
        </div>

        <!-- Collect the nav links, forms, and other content for toggling -->
        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">

            <!-- User -->
            {% if is_granted('ROLE_USER') -%}
                <ul class="nav navbar-nav navbar-right">
                    <li class="dropdown navbar-profile-dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" title="{{ app.user.name }}">
                            <img class="navbar-profile-avatar" src="{{ app.user.avatarImage|imagine_filter('navbar_avatar') }}" class="avatar" alt="{{ app.user.name }}">
                            <span class="caret"></span>
                        </a>
                        <ul class="dropdown-menu">
                            {#<li><span id="campaignchain_user_datetime"></span></li>#}
                            {#<li class="divider"></li>#}
                            <li class="dropdown-header user">{{ app.user.name }} ({{ app.user.username }})</li>
                            <li class="dropdown-header timezone">Timezone: {{ campaignchain_user_timezone_abbreviation }}</li>
                            <li><a href="{{ path('campaignchain_core_profile_edit') }}"><span class="fa fa-user"></span> Profile</a></li>
                            <li><a href="{{ path('fos_user_security_logout') }}"><span class="fa fa-sign-out"></span> Logout</a></li>
                        </ul>
                    </li>
                </ul>

                <!-- Settings -->
                <ul class="nav navbar-nav navbar-right">
                    <li>
                        <a href="#sidemenu" data-toggle="sidemenu" title="Settings"><span class="fa fa-cog"></span> <span class="visible-xs-inline">Settings </span></a>
                    </li>
                </ul>

            {% endif %}

            <!-- Developer Tools -->
            {% if campaignchain_env == 'dev' and is_granted('ROLE_USER') %}
            <ul class="nav navbar-nav navbar-right">
                <li data-step="7"><a href="#" onclick="popupwindow('{{ campaignchain_system.getDocsURL() }}/user/index.html','',900,600)"><i class="fa fa-book"></i> <span class="visible-md-inline visible-lg-inline visible-sm-inline">Help</span></a></li>
                <li class="dropdown">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown" title="Developer Tools"><span class="fa fa-wrench"></span> <span class="visible-xs-inline">Developer Tools </span><b class="caret"></b></a>
                    <ul class="dropdown-menu">
                        <li><a href="{{ path('campaignchain_development_sample_data') }}">Sample Data</a></li>
                        <li><a href="{{ path('campaignchain_development_reset_system') }}">Reset System</a></li>
                        <li><a href="{{ path('nelmio_api_doc_index') }}" target="_blank">REST API Doc</a></li>
                    </ul>
                </li>
            </ul>
            {% endif %}

        </div><!-- /.navbar-collapse -->
    </div><!-- /.container-fluid -->
    <div class="breadcrumb">
        {{ cnerta_breadcrumb_render('CampaignChainCoreBundle:Builder:mainNav') }}
    </div>
</nav>