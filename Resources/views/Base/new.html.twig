{% extends 'CampaignChainCoreBundle:Base:base.html.twig' %}

{% form_theme form 'CampaignChainCoreBundle:Form:fields.html.twig' %}

{% block javascripts %}
    {{ parent() }}
    {% if form is defined %}
    {{ form_javascript(form) }}
    {% endif %}
    <script>
        $(":required")
                .closest(".control-group")
                .children("label")
                .prepend("<span class='icon-asterisk'></span> ");
    </script>
    {% javascripts '@daterangepicker_js' combine=false %}
        <script src="{{ asset_url }}"></script>
    {% endjavascripts %}
    {% if blockui is defined %}
        {% javascripts '@blockui_js' combine=true %}
        <script src="{{ asset_url }}"></script>
        {% endjavascripts %}
    {% endif %}
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    {% if form is defined %}
    {{ form_stylesheet(form) }}
    {% endif %}
    {% stylesheets '@select2_css' combine=true %}
        <link href="{{ asset_url }}" type="text/css" rel="stylesheet" />
    {% endstylesheets %}
    {% stylesheets '@daterangepicker_css' %}
        <link href="{{ asset_url }}" type="text/css" rel="stylesheet" />
    {% endstylesheets %}
{% endblock %}

{% block body %}
    {% javascripts '@select2_js' %}
        <script src="{{ asset_url }}"></script>
    {% endjavascripts %}

    {% for flashMessage in app.session.flashbag.get('success') %}
        <div class="alert alert-success">
            {{ flashMessage|raw }}
        </div>
    {% endfor %}

    {% block form_header %}{% endblock %}

    {% embed 'AvanzuAdminThemeBundle:Widgets:box-widget.html.twig' %}
    {% block form %}
        {% block box_before %}{{ form_start(form) }}{% endblock %}
        {{ bootstrap_set_style('horizontal') }}
            {{ bootstrap_set_widget_col(6) }}
            {{ bootstrap_set_label_col(2) }}
            {% block box_body %}{{ form_widget(form) }}{% endblock %}
            {% block box_footer %}
            <div class="form-group">
                <div class="btn-group pull-right" role="group" aria-label="...">
                    {% include 'CampaignChainCoreBundle:Base:form_footer_buttons.html.twig' %}
                </div>
            </div>
            {% endblock %}
        {% block box_after %}{{ form_end(form)}}{% endblock %}
    {% endblock %}
    {% endembed %}

    {% block form_footer %}{% endblock %}

    {% if blockui is defined %}
        {% include 'CampaignChainCoreBundle:Base:blockui_wait.html.twig' %}
    {% endif %}

{% endblock %}