{% extends 'CampaignChainCoreBundle:Base:base.html.twig' %}

{% block bodytabs %}
    {{ knp_menu_render('CampaignChainCoreBundle:Builder:executeListTab', { 'style': 'tabs' }) }}
{% endblock %}

{% block body %}
    {% include 'CampaignChainCoreBundle:Base:datatable.html.twig' %}

    <!--<div class="table-responsive">-->
        <table id="example" class="table table-striped table-bordered dataTable">
            <thead>
                <tr>
                    <th></th>
                    <th>Name</th>
                    <th>Campaign</th>
                    <th>Execution</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                {% for activity in activities %}
                    <tr class="
                            {% if activity.status == "closed" or activity.status == "paused" %}text-muted {% endif %}
                            ">
                        <td align="center">
                            {% if activity.status == "open" %}
                                <i class="fa fa-clock-o"></i>
                            {% elseif activity.status == "paused" %}
                                <i class="fa fa-pause-circle-o"></i>
                            {% elseif activity.status == "closed" %}
                                <i class="fa fa-check-circle"></i>
                            {% endif %}
                        </td>
                        <td>
                            {{ activity|campaignchain_tpl_teaser }}
                        </td>
                        <td>{{ activity.getCampaign().getName() }}</td>
                        <td>
                            {{ activity|campaignchain_tpl_trigger_hook_inline }}
                        </td>
                        <td align="center">
                            {% if activity.status == 'open' or activity.status == 'paused' %}
                            <a  class="btn btn-primary"
                                role="button"
                                data-toggle="tooltip" data-placement="top" data-original-title="Edit"
                                href="{{ path('campaignchain_core_activity_edit',{'id':activity.id}) }}">
                                <i class="fa fa-pencil"></i>
                            </a>
                            {% else %}
                            <a  class="btn btn-primary"
                                role="button"
                                data-toggle="tooltip" data-placement="top" data-original-title="View"
                                href="{{ path('campaignchain_core_activity_read',{'id':activity.id}) }}">
                                <span class="fa fa-file-text"></span>
                            </a>
                            {% endif %}
                            {% if activity|campaignchain_is_removable %}
                                <a  class="btn btn-danger"
                                    role="button"
                                    data-toggle="modal" data-target="#modal-{{ activity.id }}">
                                    <i class="fa fa-trash"></i>
                                </a>
                                <div id="modal-{{ activity.id }}" class="modal fade" role="dialog">
                                    <div class="modal-dialog">

                                        <!-- Modal content-->
                                        <div class="modal-content">
                                            <div class="modal-header">
                                                <button type="button" class="close" data-dismiss="modal">&times;</button>
                                                <h4 class="modal-title">Do you really want to remove this Activity?</h4>
                                            </div>
                                             <div class="modal-footer">
                                                <a class="btn btn-default" role="button"# data-dismiss="modal">Abort</a>
                                                <a  class="btn btn-danger"
                                                    role="button"
                                                    data-toggle="tooltip" data-placement="top" data-original-title="Remove this activity"
                                                    href="{{ path('campaignchain_core_activity_remove',{'id':activity.id}) }}">
                                                    <i class="fa fa-trash"></i>
                                                </a>
                                            </div>
                                        </div>

                                    </div>
                                </div>
                            {% else %}
                                <a  class="btn btn-danger" disabled="disabled"
                                    role="button"
                                    data-toggle="tooltip" data-placement="top" data-original-title="It's not possible to remove activities which have already started or used in reports">
                                    <i class="fa fa-trash"></i>
                                </a>
                                {% endif %}
                            {#{% if activity.status == "paused" %}#}
                                {#<button type="button" class="btn btn-default btn-xs">#}
                                    {#<a href="#"><span class="fa fa-play"></span></a>#}
                                {#</button>#}
                            {#{% else %}#}
                                {#<button type="button" class="btn btn-default btn-xs">#}
                                    {#<a href="#"><span class="fa fa-pause"></span></a>#}
                                {#</button>#}
                            {#{% endif %}#}
                            {#<button type="button" class="btn btn-default btn-xs">#}
                                {#<a href="#"><span class="fa fa-trash-o"></span></a>#}
                            {#</button>#}
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    <!--</div>-->
{% endblock %}
