{% extends 'CampaignChainCoreBundle:Wizard/Install:base.html.twig' %}

{% block body %}
    <div class="symfony-form-errors">
        {{ form_errors(form) }}
    </div>
    <form action="{{ path('campaignchain_core_install_step', { 'index': index }) }}" method="POST">
        <div id="form">

            {% block form %}{% endblock %}

            {{ form_rest(form) }}

            <p>&nbsp;</p>
            <button class="btn btn-primary" type="submit">Next Step</button>

        </div>
    </form>
{% endblock %}