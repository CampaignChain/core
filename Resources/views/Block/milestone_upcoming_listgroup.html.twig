<h3>{{ settings.title }}</h3>
<ul class="list-group">
{% for milestone in milestones %}
    <li class="list-group-item">
        <h5 class="list-group-item-heading">
        <a href="{{ path('campaignchain_core_milestone_edit',{'id':milestone.id}) }}">{{ milestone.name }}</a>
        </h5>
        <p class="list-group-item-text">
            <i class="fa fa-clock-o fa-fw"></i> {{ milestone.startDate|date('Y-m-d H:i:s') }}
        </p>
        <p class="list-group-item-text">
            <i class="fa fa-bullhorn fa-fw"></i>
            <a href="{{ path('campaignchain_core_campaign_edit',{'id':milestone.getCampaign().id}) }}">{{ milestone.getCampaign().getName() }}</a>
        </p>
    </li>
{% else %}
    <li class="list-group-item">
        <h5 class="list-group-item-heading">No milestones.</h5>
    </li>
{% endfor %}
</ul>