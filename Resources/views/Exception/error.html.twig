{% extends 'CampaignChainCoreBundle:Base:base.html.twig' %}

{% block page_header %}{% endblock %}

{% block body %}

    <div class="row">
        <div class="col-md-6 col-md-offset-3 col-xs-10 col-xs-offset-1">
            <div class="jumbotron">
                <div class="row">
                    <div class="col-md-10 col-md-offset-1 col-xs-10 col-xs-offset-1">
                        {% image '@CampaignChainCoreBundle/Resources/public/images/campaignchain_error.png' %}
                        <img src="{{ asset_url }}" alt="An error occured..." class="img-responsive center-block">
                        {% endimage %}
                    </div>
                </div>
                <div class="row" style="padding-top:40px;">
                    <div class="col-md-10 col-md-offset-1 col-xs-10 col-xs-offset-1 text-center">
                        <p>
                            {% block error_message %}Unfortunately something went wrong.<br/>Please try again later or contact your administrator.{% endblock error_message %}
                        </p>
                    </div>
                </div>
                <div class="row" style="padding-top:30px;">
                    <div class="col-md-10 col-md-offset-1 col-xs-10 col-xs-offset-1 text-center">
                        {% block error_button %}
                            <script>document.write('<a href="' + document.referrer + '" class="btn btn-primary">Go Back</a>');</script>
                        {% endblock error_button %}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
