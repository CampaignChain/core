<div class="btn-group" data-toggle="tooltip" data-placement="top" data-original-title="Copy as">
    <button type="button" class="btn btn-primary dropdown-toggle" data-toggle="dropdown">
        <i class="fa fa-files-o"></i> <span class="caret"></span>
    </button>
    <ul class="dropdown-menu" role="menu">
        {% for campaign_type in campaign_types %}
            <li><a href="{{ path(campaign_type.getRoutes().copy,{'id':template_id}) }}">{{ campaign_type.getDisplayName() }}</a></li>
        {% endfor %}
    </ul>
</div>