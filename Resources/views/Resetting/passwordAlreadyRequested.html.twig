{#
This file is used to override the FOSUserBundle default template
#}

{% set page_title = 'Reset password' %}

{% extends 'CampaignChainCoreBundle:Base:base_fullscreen.html.twig' %}

{% trans_default_domain 'FOSUserBundle' %}

{% block stylesheets %}
    {{ parent() }}

    {% stylesheets '@campaignchain_login_css' filter="cssrewrite"
    'bundles/campaignchaincore/css/*' %}
    <link href="{{ asset_url }}" type="text/css" rel="stylesheet"/>
    {% endstylesheets %}
{% endblock %}

{% block body %}
    <!-- Modal -->
    <div class="modal fade" id="ResetPasswordAlreadyRequestedModal" tabindex="-1" role="dialog" aria-labelledby="Reset password"
         aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <img src="/logo.png" height="24">
                <h4 class="modal-title">Reset Password</h4>
            </div>
            <div class="modal-body">
                {% block fos_user_content %}
                    <div class="alert alert-warning" role="alert">The password for this user has already been requested within the last 24 hours.</div>
                {% endblock fos_user_content %}
            </div>
            <div class="modal-footer">
                <a class="btn btn-link" href="{{ path('fos_user_security_login') }}" role="button">Back to login</a>
            </div>
        </div>
    </div>
    <script type="text/javascript">
        $('#ResetPasswordAlreadyRequestedModal').modal({
            backdrop: 'static',
            keyboard: false
        });
        $('#ResetPasswordAlreadyRequestedModal').modal('show');
    </script>
{% endblock %}